{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"id": {
			"type": "string"
		},
		"name": {
			"type": "string"
		},
		"cards": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "number"
					},
					"name": {
						"type": "string"
					},
					"image": {
						"type": "string",
						"format": "uri"
					}
				},
				"required": ["id", "name", "image"]
			}
		}
	},
	"required": ["id", "name", "cards"]
}
